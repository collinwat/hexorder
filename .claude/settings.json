{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.claude/hooks/rustfmt.sh\"",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(ls *)",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git tag *)",
      "Bash(git branch *)",
      "Bash(git ls-*)",
      "Bash(git cat-file *)",
      "Bash(git show *)",
      "Bash(git worktree list *)",
      "Bash(mise status *)",
      "Bash(mise env *)",
      "Bash(mise check)",
      "Bash(mise check:*)",
      "Bash(mise fix)",
      "Bash(mise fix:*)",
      "Bash(mise test)",
      "Bash(mise test:*)",
      "Bash(mise setup *)",
      "Bash(mise install *)",
      "Bash(mise handoff *)",
      "Bash(mise changelog *)",
      "Bash(mise run wiki:clone *)",
      "Bash(mise issue:*)"
    ]
  }
}
